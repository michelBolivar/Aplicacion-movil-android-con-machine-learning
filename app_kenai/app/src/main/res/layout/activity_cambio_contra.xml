<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".FragmentosAdministrador.Cambio_contra">

    <!--- FONDO BLANCO 1-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blanco_fondo_dos"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- LOGO -->
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_ban" />

        <!--  TITULO-->
        <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:fontFamily="@font/old_growth"
            android:text="cambio contraseña"
            android:textColor="#fff"
            android:textSize="17dp" />


        <!--        CONTRA ACTUAL-->
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/caviar_bold"
            android:gravity="left"
            android:text="@string/ActualContraET"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/ActualContraET"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints="no"
                android:background="@drawable/custom_ico"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--        CONTRA NUEVA-->
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/caviar_bold"
            android:gravity="center"
            android:text="@string/NuevaContraEt"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/NuevaContraEt"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:autofillHints="no"
                android:background="@drawable/custom_ico"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--        Boton cambiar contra-->
        <Button
            android:id="@+id/CambiarContraBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/boton_deco"
            android:fontFamily="@font/caviar_bold"
            android:text="Cambiar Contraseña"
            android:textColor="@color/white" />


        <!--        Boton ir al inicio-->
        <Button
            android:id="@+id/IrInicioBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton_deco"
            android:fontFamily="@font/caviar_bold"
            android:text="Cancelar"
            android:textColor="@color/white" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>