<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".FragmentosCliente.SobreNosotros">



    <!--- FONDO BLANCO 1-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="420dp"
        android:layout_height="800dp"
        android:background="@drawable/blanco_fondo_dos"/>
    <!-- LOGO -->
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="130dp"
        android:paddingTop="25dp"
        android:src="@drawable/logo_ban" />

    <!--  TITULO-->
    <TextView
        android:id="@+id/NombreSobreNos"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/old_growth"
        android:gravity="center"
        android:text="sobre nosotros"
        android:textColor="#fff"
        android:textSize="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/fam"
        />

    <!-- TEXTO 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:textColor="#637667"
        android:textSize="17dp"
        android:fontFamily="@font/caviar_bold"
        android:gravity="center"
        android:text="kenai, es un emprendimiento colombiano que busca combatir la indiferencia, la falta de conocimiento y pertenensia por nuestros ecosistemas y su fauna "/>

    <!--TEXTO 2 -->
    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:textColor="#637667"
        android:textSize="16dp"
        android:fontFamily="@font/caviar_bold"
        android:gravity="center"
        android:text="queremos lograrlo mediante la exposicion visual de dicha riqueza, en la linea de trabajo que manejamos actualmente "/>

    <!--TEXTO 3-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:textColor="#637667"
        android:textSize="17dp"
        android:fontFamily="@font/caviar_bold"
        android:gravity="center"
        android:text="Hoodies  - Camisetas - Gorros - Ecotours  "/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="bottom|center"
        android:layout_width="200dp"
        android:layout_marginBottom="40dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/insta_noso"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/insta_ver_oscu"/>

        <ImageView
            android:id="@+id/face_noso"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/face_ico_verde"/>

        <ImageView
            android:id="@+id/you_noso"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/you_ico_verde"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>