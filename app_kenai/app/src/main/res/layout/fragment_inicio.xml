<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".FragmentosCliente.Inicio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


       <!--- FONDO BLANCO-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="180dp"
            android:layout_height="1023dp"
            android:background="@drawable/blanco_fondo"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!---TABLA DE LOGO Y REDES-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/logo_ban" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/insta"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp"
                        android:background="#00000000"
                        android:src="@drawable/insta" />

                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/you" />

                    <ImageView
                        android:id="@+id/face"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/face" />
                </androidx.appcompat.widget.LinearLayoutCompat>


            </TableRow>


            <!--           IMAGEN CAMARA-->
            <!--  <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/camara"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="camara.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true" /> -->

            <ImageView
                android:id="@+id/camara"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/escani" />


            <!--            TITULO ECOSISTEMAS-->

            <TextView
                android:layout_width="400dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="#6B8D95"
                android:fontFamily="@font/old_growth"
                android:paddingTop="10dp"

                android:text="        ecosistemas"
                android:textColor="#fff"
                android:textSize="20dp" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!--    CUADRO DE TEXTO-->
                <TextView

                    android:layout_width="340dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/text_entrada"
                    android:fontFamily="@font/caviar_dreams"
                    android:padding="10dp"
                    android:paddingTop="10dp"
                    android:shadowRadius="10"
                    android:text="  También encuentra la información de la especie desde su ecosistema"
                    android:textColor="#fff"
                    android:textSize="19dp" />


                <!--           LISTA DE ECOSISTEMAS-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewEcosisD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:foregroundGravity="center" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <!--            TITULO NOTICIAS-->

            <TextView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#6B8D95"
                android:fontFamily="@font/old_growth"
                android:paddingTop="10dp"
                android:text="            noticias"
                android:textColor="#fff"
                android:textSize="20dp" />


            <!--    CUADRO DE TEXTO-->

            <TextView

                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/text_entrada"
                android:fontFamily="@font/caviar_dreams"
                android:gravity="center"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:text="  ultimas noticias"
                android:textColor="#fff"
                android:textSize="11dp" />


            <!--           LISTA DE NOTICIAS-->
            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recyclerViewAnimales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>

</ScrollView>