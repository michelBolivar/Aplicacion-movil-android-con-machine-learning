<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".CategoriasCliente.ParamoCli">

    <!--- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPara"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="#516653"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/old_growth"
        android:gravity="center"
        android:text="paramo"
        android:textColor="#fff"
        android:textSize="25dp" />

    <!--- FONDO BLANCO-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="90dp"
        android:layout_height="1023dp"
        android:background="@drawable/blanco_fondo">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/insta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="540dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/degradado_fondo"
                android:src="@drawable/insta_ver_oscu" />

            <ImageView
                android:id="@+id/youtube"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/you_ico_verde" />

            <ImageView
                android:id="@+id/face"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/face_ico_verde" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:paddingTop="25dp"
        android:src="@drawable/logo_ban" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewParamoC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="160dp" />

</RelativeLayout>