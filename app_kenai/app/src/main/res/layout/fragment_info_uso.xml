<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".FragmentosCliente.infoUso">

    <!--    CUADRO DE TEXTO 2-->

    <!--- FONDO BLANCO 1-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="420dp"
        android:layout_height="800dp"
        android:background="@drawable/blanco_fondo_dos"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--LOGO-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingTop="25dp"
            android:src="@drawable/logo_ban"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="7dp" />

        <!--TITULO-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/caviar_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="¿Cómo usar el escaner? "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <!--CUADRO1-->
        <TextView
            android:layout_width="304dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:background="@drawable/text_entrada"
            android:fontFamily="@font/caviar_dreams"
            android:gravity="center"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:shadowRadius="10"
            android:text="1.Enfoca la imagen de alguno de nuestros productos  o la especie que quieras clasificar "
            android:textColor="#fff"
            android:textSize="8dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="140dp" />


        <!--IMAGENES-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagen1"
                android:layout_width="113dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center"
                android:src="@drawable/celu2"
                tools:layout_editor_absoluteX="213dp"
                tools:layout_editor_absoluteY="252dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagen1"
                    android:layout_width="77dp"
                    android:layout_height="122dp"
                    android:src="@drawable/sacos"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="230dp" />

                <ImageView
                    android:id="@+id/imagen1"
                    android:layout_width="80dp"
                    android:layout_height="93dp"
                    android:src="@drawable/osito"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="352dp" />
            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView

            android:layout_width="304dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_entrada"
            android:fontFamily="@font/caviar_dreams"
            android:gravity="center"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:shadowRadius="10"
            android:text="2.Nuestra Inteligencia Artificial clasificará  el ecosistema de tu especie"
            android:textColor="#fff"
            android:textSize="8dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="476dp" />

        <Button
            android:id="@+id/btn_enten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="#516653"
            android:fontFamily="@font/caviar_bold"
            android:text="Escanear"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="586dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>