<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".Ecosistemas.ParamoA.ParamoA">


        <!--- TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAdminPara1"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="#516653"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!--- FONDO BLANCO 1-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blanco_fondo_dos">


        <!--  <Button
                    android:id="@+id/Agregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/Agregar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.786"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" /> -->


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/AgregarParamo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="330dp"
            android:src="@drawable/mas_ani" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- LOGO -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center"
        android:src="@drawable/logo_ban" />

    <!--  TITULO-->
    <TextView
        android:id="@+id/NombreSobreNos"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/old_growth"
        android:gravity="center"
        android:text="paramo"
        android:textColor="#fff"
        android:textSize="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/admin_para" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_marginTop="450dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewParamo"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_marginLeft="60dp"
            android:foregroundGravity="center" />
    </androidx.appcompat.widget.LinearLayoutCompat>







