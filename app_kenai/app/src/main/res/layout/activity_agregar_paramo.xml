<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".Ecosistemas.ParamoA.AgregarParamo">




    <!--- FONDO BLANCO 1-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blanco_fondo_dos" />

    <!-- LOGO -->
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="130dp"

        android:paddingTop="25dp"
        android:src="@drawable/logo_ban" />

    <!--  TITULO-->
    <TextView

        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/old_growth"
        android:gravity="center"
        android:text="añadir especie "
        android:textColor="#fff"
        android:textSize="15dp" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caviar_bold"
            android:gravity="center"
            android:text="Nombre del Animal"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/NombreAnimal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_ico"
            android:inputType="textCapWords|textAutoCorrect"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/caviar_bold"
            android:gravity="center"
            android:text="Descripcion"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/DescripcionAnimal"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_ico"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/caviar_bold"
            android:gravity="center"
            android:text="Añadir imagen"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ImagenAgregarParamo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/escani" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/PublicarAnimalPara"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_deco"
                android:fontFamily="@font/caviar_bold"
                android:text="Publicar"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/botoncitoPara"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/boton_deco"
                android:fontFamily="@font/caviar_bold"
                android:textColor="@color/white"
                android:text="Cancelar"/>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>