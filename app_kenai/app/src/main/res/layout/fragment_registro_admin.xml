<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".FragmentosAdministrador.RegistroAdmin">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/blanco_fondo_dos"
       >
        <!-- LOGO -->
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:paddingTop="25dp"
            android:src="@drawable/logo_ban" />

        <!--  TITULO-->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/old_growth"
            android:gravity="center"
            android:text="Registrar"
            android:textColor="#fff"
            android:textSize="17dp" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
           >

            <!--  NOMBRES-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviar_bold"
                android:gravity="center"
                android:text="Nombres"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ico"
                android:padding="5dp"
                android:inputType="textCapWords|textAutoComplete"
                />
            <!--ROL-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviar_bold"
                android:gravity="center"
                android:text="Rol"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/rol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ico"
                android:layout_marginTop="9dp"
                android:padding="5dp" />

            <!-- CORREO-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviar_bold"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Correo Electronico"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/Correo"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ico"
                android:layout_marginTop="12dp"
                android:padding="5dp"/>
            <!-- CONTRASE;A-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviar_bold"
                android:gravity="center"
                android:text="ContraseÃ±a"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/contra"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ico"
                android:layout_marginTop="12dp"
                android:padding="5dp"
               />

            <!-- CODIGO VERIFI-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caviar_bold"
                android:gravity="center"
                android:text="@string/CodigoVerifica"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/codigoVerifica"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_ico"
                android:layout_marginTop="12dp"
                android:padding="5dp"
                />
            <Button
                android:id="@+id/RegistrarUsu"
                android:text="@string/RegistrarBoton"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/boton_deco"
                android:fontFamily="@font/caviar_bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>








</androidx.appcompat.widget.LinearLayoutCompat>